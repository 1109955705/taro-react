{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/pages/*": ["./src/pages/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/store/*": ["./src/store/*"], 
      "@/api/*": ["./src/api/*"], 
      "@/utils/*": ["./src/utils/*"], 
      "@/static/*": ["./src/static/*"],
      "@/libs/*": ["./src/libs/*"],
      "@/i18n/*": ["./src/i18n/*"],
    },
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "compileOnSave": false
}
